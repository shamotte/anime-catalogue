<Window x:Class="CichyStrzalko.AnimeKatalog.UI.MainWindow"
        x:Name="AnimeCatalogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CichyStrzalko.AnimeKatalog.UI"
        mc:Ignorable="d"
        Title="Anime Katalog" Height="450" Width="800">
    <TabControl Name="Zakładki" DataContext="{Binding ElementName=AnimeCatalogue}">
        <TabItem Name="Studio" Header ="Studia">
            <!--detail panel containing Studios-->
            <DockPanel>
                <!--Filters for Studio -->
                <StackPanel DockPanel.Dock="Left" Orientation="Vertical">
                    <TextBlock>Here be filters</TextBlock>
                </StackPanel>
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Left" >
                    <!--TODO:ADD FUNCTIONS-->
                    <Button Margin="5">First</Button>
                    <Button Margin="5">Second</Button>
                    <Button Margin="5">Third</Button>
                </StackPanel>
                <!-- Studio -->
                <StackPanel  Orientation="Vertical">
                    <ListView ItemsSource="{Binding StudioList.StudioList}">
                        <ListView.View>
                            <GridView>
                                <!--TODO:Add DataBinding Here-->
                                <GridViewColumn Header="Nazwa" DisplayMemberBinding="{Binding Name}"></GridViewColumn>
                                <GridViewColumn Header="Adres" DisplayMemberBinding="{Binding Address}"></GridViewColumn>
                                <GridViewColumn Header="Obraz">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image>

                                            </Image>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>

                </StackPanel>
            </DockPanel>
        </TabItem>
        <TabItem Name="Anime" Header="Anime">

            <!--Master detail panel containing animes and their characters-->
            <DockPanel >
                <!--Filters for Anime -->
                <StackPanel DockPanel.Dock="Left" Orientation="Vertical">
                    <TextBlock>Here be filters</TextBlock>
                </StackPanel>
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Left" >
                    <!--TODO:ADD FUNCTIONS-->
                    <Button Margin="5">First</Button>
                    <Button Margin="5">Second</Button>
                    <Button Margin="5">Third</Button>
                </StackPanel>
                <!-- Anime -->
                <StackPanel  Orientation="Vertical">
                    <ListView Name="list_anime" ItemsSource="{Binding AnimeList.AnimeList}">
                        <ListView.View>
                            <GridView>
                                <!--TODO:Add DataBinding Here-->
                                <GridViewColumn Header="Nazwa" DisplayMemberBinding="{Binding Name}"></GridViewColumn>
                                <GridViewColumn Header="Data premiery" DisplayMemberBinding="{Binding Premiere}"></GridViewColumn>
                                <GridViewColumn Header="Liczba odcinków" DisplayMemberBinding="{Binding Episodes}"></GridViewColumn>
                                <GridViewColumn Header="Gatunki">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Genres}">
                                                
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                    
                                </GridViewColumn>
                                <GridViewColumn Header="Obraz">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Source="{Binding ImageFile}">
                                                  
                                            </Image>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </DockPanel>
        </TabItem>
        <TabItem Name="Characters" Header="Postacie">
            <DockPanel >
                <!--Filters for Anime -->
                <StackPanel DockPanel.Dock="Left" Orientation="Vertical">
                    <TextBlock>Here be filters</TextBlock>
                </StackPanel>
                <!-- Characters -->
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Left" >
                    <Button Margin="5">Dodaj</Button>
                    <Button Margin="5">Usuń</Button>
                    <Button Margin="5">Edytuj</Button>
                </StackPanel>
                <StackPanel  Orientation="Vertical">
                    <ListView ItemsSource="{Binding CharacterList.CharacterList}">
                        <ListView.View>
                            <GridView>
                                <!--TODO:Add DataBinding Here-->
                                <GridViewColumn Header="Nazwa" DisplayMemberBinding="{Binding Name}"></GridViewColumn>
                                <GridViewColumn Header="Obraz">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Source="{Binding ImageFile}">
                                                
                                            </Image>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </DockPanel>
        </TabItem>
        
    </TabControl>
    
</Window>
