<Window x:Class="CichyStrzalko.AnimeKatalog.UI.MainWindow"
        x:Name="AnimeCatalogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CichyStrzalko.AnimeKatalog.UI" xmlns:viewmodels="clr-namespace:CichyStrzalko.AnimeKatalog.UI.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        Title="Anime Katalog" Height="450" Width="800">
    <TabControl Name="Zakładki">
        <TabItem Name="Studio" Header ="Studia">
            <!--detail panel containing Studios-->
            <DockPanel>
                <!--TODO:Filters for Studio -->
                <StackPanel DockPanel.Dock="Left" Orientation="Vertical">
                    <TextBlock>Here be filters</TextBlock>
                </StackPanel>
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Left" >
                    <Button Content="Dodaj"
                        Command="{Binding AddStudioCommand}"/>
                    <Button Content="Edytuj"
                        />
                    <Button Content="Usuń" Command="{Binding DeleteStudioCommand}"
                        />
                </StackPanel>
                <!-- Studio -->
                <StackPanel  Orientation="Horizontal">
                    <ListView Name="ListStudio" ItemsSource="{Binding Studios}" SelectedItem="{Binding Selectedstudio }">
                        <ListView.View>
                            <GridView>
                                <!--TODO:Add DataBinding Here-->
                                <GridViewColumn Header="Nazwa" DisplayMemberBinding="{Binding Studio.Name}"></GridViewColumn>
                                <GridViewColumn Header="Adres" DisplayMemberBinding="{Binding Studio.Address}"></GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <StackPanel Orientation="Vertical">
                        <TextBlock>Id</TextBlock>
                        <TextBlock Text="{Binding Selectedstudio.Studio.Id}"/>
                        <TextBlock>Nazwa</TextBlock>
                        <TextBlock Text="{Binding Selectedstudio.Studio.Name}"/>
                        <TextBlock>Adres</TextBlock>
                        <TextBlock Text="{Binding Selectedstudio.Studio.Address}"/>
                    </StackPanel>
                    <!-- Addition-->
                    <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                        <TextBlock>Dodaj nowe studio</TextBlock>
                        <TextBlock>Nazwa</TextBlock>
                        <TextBox Text="{Binding NewStudio.Studio.Name, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock>Adres</TextBlock>
                        <TextBox Text="{Binding NewStudio.Studio.Address, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </StackPanel>
            </DockPanel>
        </TabItem>
        <TabItem Name="Anime" Header="Anime">

            <!--Master detail panel containing animes and their characters-->
            <DockPanel >
                <!--Filters for Anime -->
                <StackPanel DockPanel.Dock="Left" Orientation="Vertical">
                    <TextBlock>Here be filters</TextBlock>
                </StackPanel>
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Left" >
                    <!--TODO:ADD FUNCTIONS-->
                    <Button Content="Dodaj"/>
                    <Button Content="Edytuj"/>
                    <Button Content="Usuń" Command="{Binding DeleteAnimeCommand}"/>
                </StackPanel>
                <!-- Anime -->
                <StackPanel  Orientation="Horizontal">
                    <ListView Name="ListAnime" ItemsSource="{Binding Animes}"  SelectedItem ="{Binding Selectedanime}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Nazwa" DisplayMemberBinding="{Binding Anime.Name}"></GridViewColumn>
                                <GridViewColumn Header="Data premiery" DisplayMemberBinding="{Binding Anime.Premiere}"></GridViewColumn>
                                <GridViewColumn Header="Liczba odcinków" DisplayMemberBinding="{Binding Anime.Episodes}"></GridViewColumn>
                                <GridViewColumn Header="Gatunki">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Genres}">

                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <StackPanel>
                        <TextBlock>Id</TextBlock>
                        <TextBlock Text="{Binding Selectedanime.Anime.Id}"/>
                        <TextBlock>Nazwa</TextBlock>
                        <TextBlock Text="{Binding Selectedanime.Anime.Name}"/>
                        <TextBlock>Liczba odcinków</TextBlock>
                        <TextBlock Text="{Binding Selectedanime.Anime.Episodes}"/>
                        <TextBlock>Gatunki</TextBlock>
                        <TextBlock Text="{Binding Selectedanime.Genres}"/>
                        <TextBlock>Studio</TextBlock>
                        <TextBlock Text="{Binding Selectedanime.Anime.Studio.Name}"/>
                    </StackPanel>
                </StackPanel>
            </DockPanel>
        </TabItem>
        <TabItem Name="Characters" Header="Postacie">
            <DockPanel >
                <!--Filters for Characters -->
                <StackPanel DockPanel.Dock="Left" Orientation="Vertical">
                    <TextBlock>Here be filters</TextBlock>
                </StackPanel>
                <!-- Characters -->
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Left" >
                    <Button Content="Dodaj"/>
                    <Button Content="Edytuj" />
                    <Button Content="Usuń" Command="{Binding DeleteCharacterCommand}"/>
                </StackPanel>
                <StackPanel  Orientation="Horizontal">
                    <ListView Name="ListCharacters" ItemsSource="{Binding Characters}" SelectedItem="{Binding Selectedcharacter}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Nazwa" DisplayMemberBinding="{Binding Character.Name}"></GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <StackPanel>
                        <TextBlock>Id</TextBlock>
                        <TextBlock Text="{Binding Selectedcharacter.Character.Id}"/>
                        <TextBlock>Nazwa</TextBlock>
                        <TextBlock Text="{Binding Selectedcharacter.Character.Name}"/>
                        <TextBlock>Anime</TextBlock>
                        <TextBlock Text="{Binding Selectedcharacter.Character.Anime.Name}"/>
                    </StackPanel>
                </StackPanel>
            </DockPanel>
        </TabItem>

    </TabControl>

</Window>
